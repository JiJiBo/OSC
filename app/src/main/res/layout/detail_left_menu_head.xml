<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/left_menu_head_style"
            android:background="@drawable/drawer_menu_icon_quest" />

        <TextView
            style="@style/left_menu_head_text_style"
            android:text="技术问答" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/left_menu_head_style"
            android:background="@drawable/drawer_menu_icon_opensoft" />

        <TextView
            style="@style/left_menu_head_text_style"
            android:text="开源软件" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/left_menu_head_style"
            android:background="@drawable/drawer_menu_icon_blog" />

        <TextView
            style="@style/left_menu_head_text_style"
            android:text="博客区" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/left_menu_head_style"
            android:background="@drawable/drawer_menu_icon_gitapp" />

        <TextView
            style="@style/left_menu_head_text_style"
            android:text="Git客户端" />

    </LinearLayout>
</LinearLayout>